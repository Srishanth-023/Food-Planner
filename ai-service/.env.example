# ===========================================
# NutriVision AI Service - Environment Config
# ===========================================

# Server Configuration
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
FALLBACK_LLM_MODEL=gpt-3.5-turbo

# Food Recognition Model
FOOD_RECOGNITION_MODEL=yolov8n.pt
FOOD_RECOGNITION_CONFIDENCE=0.5

# Portion Estimation
PORTION_ESTIMATION_METHOD=reference_object
DEPTH_ESTIMATION_MODEL=MiDaS_small

# Database Connections
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nutrivision_nutrition
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nutrivision_nutrition

MONGODB_URI=mongodb://localhost:27017/nutrivision

REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:5000

# Model Cache Directory
MODEL_CACHE_DIR=./models
